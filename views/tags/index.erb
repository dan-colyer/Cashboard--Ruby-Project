<p>Total Spend (all time): <%= @total %></p>
<p>Remaining Budget: <%= @budget_minus_total %></p>

<% @tags.each do |tag| %>
  <% @trans = Transaction.transactions_by_tag(tag.id) %>
    <table>
      <thead>
        <tr>
          <th>
            Type
          </th>
          <th>
            Merchant
          </th>
          <th>
            Description
          </th>
          <th>
            Amount
          </th>
          <th>
            Date
          </th>
        </tr>
      </thead>
      <tbody>
        <% @trans.each do |tran| %>
          <tr>
            <td>
              <%= tran.tag().type %>
            </td>
            <td>
              <%= tran.merchant().name %>
            </td>
            <td>
              <%= tran.description %>
            </td>
            <td>
              <%= tran.amount %>
            </td>
            <td>
              <%= tran.pretty_date %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>
